{
  "name": "vue-sdz",
  "version": "0.0.11",
  "main": "dist/js/build.cjs.js",
  "module": "dist/js/build.esm.js",
  "private": false,
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --cache --fix",
      "yarn test-helpers --bail --findRelatedTests",
      "yarn test-components --bail --findRelatedTests"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rollup -c",
    "dev": "yarn build && poi --serve examples/main.js",
    "commit": "git-cz",
    "postbuild": "poi",
    "test-helpers": "jest 'src/helpers'",
    "test-components": "jest 'src/components'",
    "test-e2e:run": "cypress run",
    "test-e2e:open": "cypress open 'tests/e2e/integration/**/*'"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-unit-jest": "^4.5.13",
    "@vue/compiler-sfc": "^3.2.2",
    "@vue/test-utils": "^1.2.2",
    "autoprefixer": "^10.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.3.0",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.4",
    "cypress": "^8.0.0",
    "cypress-rollup-preprocessor": "^0.6.2",
    "cz-coenvencional": "^1.0.8",
    "eslint": "^7.31.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-vue": "^7.14.0",
    "husky": "^7.0.0",
    "jest": "26.6.3",
    "lint-staged": "^11.1.1",
    "node-sass": "^6.0.1",
    "poi": "^12.10.3",
    "postcss": "^8.3.5",
    "rollup": "^2.53.3",
    "rollup-plugin-scss": "3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "5",
    "sass": "^1.36.0",
    "sass-loader": "10",
    "vue": "^2.6.14",
    "vue-jest": "^3.0.7",
    "vue-loader": "15.9.2",
    "vue-router": "^3.5.2",
    "vue-template-compiler": "^2.6.14"
  },
  "license": "MIT",
  "repository": "https://github.com/marlonfrontend/vue-sdz",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-coenvencional"
    }
  }
}
